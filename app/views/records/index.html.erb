<div class="row">
  <div class="col-md-12">
    <div id="formario">
      <h1>Lista de Bloqueos</h1>
      <%= link_to 'Nuevo Bloqueo', new_record_path, class: "button button_red" %> <br><br>
      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <th>I.D</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Regreso</th>
            <th>Referencia</th>
            <th>Cliente</th>
            <th>Numero pasajeros</th>
            <th>Numero de camiones</th>
            <th>Lugar salida</th>
            <th>Precio</th>
            <th>Status op</th>
            <th>Status admin</th>
            <th>% Completo</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
      <% @records.each do |record| %>
      <tr>
        <td><%= record.id%></td>
        <td><%= record.start_time.strftime(" %b-%d-%Y") %></td>
        <td><%= record.end_time.strftime(" %b-%d-%Y") %></td>
        <td><%= record.title %></td>
        <td><%= record.client.razon_social %></td>
        <td><%= record.numero_pasajeros %></td>
        <td><%= record.numero_de_camiones %></td>
        <td><%= record.lugar_salida %></td>
        <td><%= record.precio %></td>
        <td><%= record.status_op %></td>
        <td><%= record.status_admin %></td>
        <td><%= record.sum_total %> % </td>
        <td><%= link_to 'Ver mÃ¡s', record %></td>
        <td><%= link_to 'Editar', edit_record_path(record) %></td>
        <td><%= link_to 'Eliminar', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<br>
