<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Initial time</th>
      <th>Finish time</th>
      <th>Title</th>
      <th>Client</th>
      <th>User</th>
      <th>Numero pasajeros</th>
      <th>Numero de camiones</th>
      <th>Lugar salida</th>
      <th>Referencia salida</th>
      <th>Nombre referencia</th>
      <th>Telefono referencia</th>
      <th>Precio</th>
      <th>Precio</th>
      <th>Factura</th>
      <th>Num factura</th>
      <th>Status op</th>
      <th>Status admin</th>
      <th>Observaciones</th>
      <th>Distancia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.start_time %></td>
        <td><%= record.end_time %></td>
        <td><%= record.initial_time %></td>
        <td><%= record.finish_time %></td>
        <td><%= record.title %></td>
        <td><%= record.client %></td>
        <td><%= record.user %></td>
        <td><%= record.numero_pasajeros %></td>
        <td><%= record.numero_de_camiones %></td>
        <td><%= record.lugar_salida %></td>
        <td><%= record.referencia_salida %></td>
        <td><%= record.nombre_referencia %></td>
        <td><%= record.telefono_referencia %></td>
        <td><%= record.precio %></td>
        <td><%= record.precio %></td>
        <td><%= record.factura %></td>
        <td><%= record.num_factura %></td>
        <td><%= record.status_op %></td>
        <td><%= record.status_admin %></td>
        <td><%= record.observaciones %></td>
        <td><%= record.distancia %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

