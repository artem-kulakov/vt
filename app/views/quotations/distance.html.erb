<div id="step-3" class="tab-pane step-content" style="display: block;">
    <h5>Confirmar Distancia</h5>
    <hr class="">

    <div class="row">
        <div class="col">
            <%= form_for @quotation do |f| %>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <%= f.label :Distancia %>
                            <%= f.text_field :distancia, class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <%= f.hidden_field :status, value: 'Precios' %>
                        <%= hidden_field_tag :step, 3 %>
                        <div class="btn-group">
                          <%= link_to 'Back', itinerary_quotation_path(@quotation), class: "btn btn-primary" %>
                          <%= f.submit "Siguiente", class: "btn btn-primary" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
