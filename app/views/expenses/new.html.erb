<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Nuevo Gasto</h5>
        </div>
        <div class="card-block">
            <%= form_for(@expense) do |f| %>
              <% if @expense.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
                  <ul>
                  <% @expense.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.label :categoria %><br>
                <%= f.select :categoria, [["Gastos de mantenimiento"], ["Gastos fijos"], ["Nómina"], ["Gastos varios"], ["Internet / Mkt"]], {:prompt => 'Elige la Categoría'}, {:required => true, class: "form-control"}%>
              </div>
              <div class="form-group">
                <%= f.label :cantidad %><br>
                <%= f.number_field :cantidad, required:true, class: "form-control" %>
              </div>

            <div class="row">
              <div class="col-md-6">
              <div class="form-group">
                <%= f.label :mes %><br>
                <%= f.select :mes, [["Enero", "01"], ["Febrero", "02"], ["Marzo", "03"], ["Abril", "04"], ["Mayo", "05"], ["Junio", "06"], ["Julio", "07"], ["
                  Agosto", "08"], ["Septiembre", "09"], ["Octubre", "10"], ["Noviembre", "11"], ["Diciembre", "12"]], {:prompt => 'Elige mes'}, {:required => true, class: "form-control"}%>
              </div>
            </div>

              <div class="col-md-6">
              <div class="form-group">
                <%= f.label :año %><br>
                <%= f.select :ano, [["2018", "2018"], ["2019", "2019"], ["2020", "2020"]], {:prompt => 'Elige año'}, {:required => true, class: "form-control"}%>
              </div>
            </div>
            </div>

              <div class="form-group">
                <%= f.label :nota %><br>
                <%= f.text_area :nota, class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit class: "btn btn-primary" %>
              </div>

            </div>


            </div>
            </div>

            <div class="col-md-5">
                <div class="panel panel-headline">
                    <div class="panel-heading">
                        
                    </div>
                    <div class="panel-body">
                        <div id="contact2">
              <%= f.fields_for :receipts do |receipt| %>

              <%= render "receipt_fields", f: receipt %>
              <% end %>
                  <br>
                  <div class="links">
                    <%= link_to_add_association 'Añadir Autobús', f, :receipts, class: "label label-success" %>
                  </div>
                  <br>
            </div>


                    </div>
                </div>
            </div>

            <% end %>
        </div>
    </div>
</div>
