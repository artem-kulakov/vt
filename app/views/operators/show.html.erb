<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5><%= @operator.nombre %></h5>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-12 mb-3">
                    <h6 class="">
                        <span class="text-muted m-r-5">Telefono:</span>
                        <%= @operator.telefono %>
                    </h6>
                </div>
                <div class="col-12 mb-3">
                    <h6 class="">
                        <span class="text-muted m-r-5">Papeles:</span>
                        <%= @operator.papeles %>
                    </h6>
                </div>
                <div class="col-12 mb-3">
                    <h6 class="">
                        <span class="text-muted m-r-5">Observaciones:</span>
                        <%= @operator.observaciones %>
                    </h6>
                </div>
                <div class="col-12">
                    <%= link_to 'Editar Operador', edit_operator_path(@operator), class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>

  <% @vouchers.group_by(&:month).sort.each do |month, vouchers| %>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5><%= month %></h5>
            </div>
            <div class="card-block">
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Operador</th>
                        <th>Operación</th>
                        <th>Notas</th>
                        <th>Fecha</th>
                        <th>Cantidad</th>
                        <th colspan="2"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% vouchers.each do |voucher| %>
                      <tr>
                        <td><%= voucher.operator.nombre %></td>
                        <td><%= voucher.operacion %></td>
                        <td><%= voucher.nota %></td>
                        <td><%= voucher.fecha.to_date.strftime('%G-%B') %></td>
                        <td><%= voucher.cantidad %></td>
                        <td><%= link_to 'Ver mas', edit_voucher_path(voucher) %></td>
                        <td><%= link_to 'Eliminar', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                      <% end %>
                      <tr>
                        <td></td>
                        <td></td>
                        <td>Gastos totales: <%= number_to_currency @a= vouchers.select{|c| c.operacion == 'Gastos del mes'}.map(&:cantidad).sum%></td>
                        <% number_to_currency @c= vouchers.select{|c| c.operacion == 'Comprobantes'}.map(&:cantidad).sum%>
                        <% number_to_currency @d= vouchers.select{|c| c.operacion == 'Saldo a favor'}.map(&:cantidad).sum%>
                        <td>Compr. y saldo a favor:  <%= number_to_currency @b= (@c + @d) %></td>
                        <% if @b < @a*0.5 %>
                        <td class="text-danger">Penalización</td>
                        <% elsif @b > @a+500 %>
                        <td class="text-success">Bono del mes</td>
                        <% else %>
                        <td></td>
                        <% end %>
                        
                        <td></td>
                        <td></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
  <% end %>
