<div class="row">
  <div class="col-md-12">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Operadores</h3>
        <hr>
      </div>
      <div class="panel-body">
        <div class="content table-responsive table-full-width">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Número de Licencia</th>
                <th>Vigencia</th>
                <th>Papeles</th>
                <th>Observaciones</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @operators.each do |operator| %>
              <tr>
                <td><%= operator.nombre %></td>
                <td><%= operator.telefono %></td>
                <td><%= operator.licencia%></td>
                <td><%= operator.validez%></td>
                <td><%= operator.papeles %></td>
                <td><%= operator.observaciones %></td>
                <td><%= link_to 'Ver más', operator %></td>
                <td><%= link_to 'Editar', edit_operator_path(operator) %></td>
                <td><%= link_to 'Eliminar', operator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>   
      </div>
    </div>
  </div>
</div>