<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Filtrar por operador y fecha</h5>
        </div>
        <div class="card-block">
            <%= search_form_for @q, html: { autocomplete: "off" } do |f| %>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Operador:</label>
                            <%= f.select :operator_id_eq, options_from_collection_for_select(current_user.company.operators, "id", "nombre", @q.operator_id_eq), {:prompt => 'Elige operador'}, {class: "form-control"} %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Autobús:</label>
                            <%= f.select :bus_id_eq, options_from_collection_for_select(current_user.company.buses, "id", "numero", @q.bus_id_eq), {:prompt => 'Elige autobús'}, {class: "form-control"} %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fecha Inicio:</label>
                            <%= f.text_field :record_start_time_gteq, class: "form-control d_today", autocomplete: 'off', placeholder: "Date >= to" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fecha Final:</label>
                            <%= f.text_field :record_start_time_lteq, class: "form-control d_today", autocomplete: 'off', placeholder: "Date <= to" %>
                        </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= f.submit "Buscar", class: "btn btn-primary" %>
                  </div>
                  </div>
            <% end %>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5 class="">Servicios</h5>
            <% @years.reverse.each do |year| %>
              <% if year.to_s == @year.to_s %>
                <span class="mr-2"><%= year %></span>
              <% else %>
                <%= link_to year, services_path(year: year), class: "mr-2" %>
              <% end %>
            <% end %>
        </div>
        <div class="card-block">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <th>ID</th>
                        <th>Autobús</th>
                        <th>Operador</th>
                        <th>Fecha de Servicio</th>
                        <th>Km incial</th>
                        <th>Km Final</th>
                        <th>Factor</th>
                        <th>Gastos</th>
                    </thead>
                    <tbody>
                        <% @services.each do |service| %>
                        <tr>
                            <td><%= service.id%></td>
                            <td><%= service.bus.numero%></td>
                            <td><%= service.operator.nombre %></td>
                            <td><%= service.record.start_time.strftime(" %b-%d-%Y") %> - <%= service.record.end_time.strftime(" %b-%d-%Y") %></td>
                            <td><%= service.km_inicio %></td>
                            <td><%= service.km_fin %></td>
                            <td><%= service.factor %></td>
                            <td><%= number_to_currency service.sum_gastos %></td> 
                        </tr>
                        <% end %>
                        <tr>            
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Total:  <%= number_to_currency @services.sum(:suma) %></td>
                        </tr>
                    </tbody>
                </table>
                <div style="display:flex; justify-content:center; align-items:center;">
                    <% unless @services.blank? %>
                        <%= will_paginate @services, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
                    <% end %>
                </div>
            </div>       
        </div>
    </div>
</div>
