<div id="formario">
	<%= search_form_for @q do |f| %>
	<div class="row">
		<div class="col-md-12">
			<h6>Operador:</h6>
			<%= f.select :operator_id_eq, options_from_collection_for_select(Operator.all, "id", "nombre", @q.operator_id_eq) %>
		</div>
		</div>

		<div class="row">
			<div class="input-daterange" id="datepicker">
			<div class="col-md-6">
				<h6>Fecha Inicio:</h6>
				<%= f.text_field :record_start_time_gteq, class: "form-control", placeholder: "Date >= to" %>
			</div>
			<div class="col-md-6">
				<h6>Fecha Final:</h6>
				<%= f.text_field :record_start_time_lteq, class: "form-control", placeholder: "Date <= to" %>
			</div>
		</div>
		</div>

	<div class="row">
		<div class="col-md-4">
			<%= f.submit "Buscar", class: "button button_red button_block" %>
		</div>
	</div>
	<hr>

	<% end %>
</div>



<div id="tablon">
	<div class="container">
		<div class="content table-responsive table-full-width">
			<table class="table table-hover table-striped">
				<thead>
					<th>ID</th>
					<th>Operador</th>
					<th>Fecha de Servicio</th>
					<th>Gastos</th>
					<th colspan="3"></th>
				</thead>
				<tbody>
					<% @services.each do |service| %>
					<tr>
						<td><%= service.id%></td>
						<td><%= service.operator.nombre %></td>
						<td><%= service.record.start_time.strftime(" %b-%d-%Y") %> - <%= service.record.end_time.strftime(" %b-%d-%Y") %></td>
						<td><%= number_to_currency service.sum_gastos %></td> 
					</tr>
					<% end %>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
					<tr>            
						<td></td>
						<td></td>
						<td></td>
						<td>Total:  <%= number_to_currency @services.sum(:suma) %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $('.form-control').datepicker({
    	todayHighlight: true,
    	toggleActive: true
    });
  });
</script>
