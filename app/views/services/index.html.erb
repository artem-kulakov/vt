<div id="tablon">
<div class="container">
<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>ID</th>
          <th>Operador</th>
          <th>Gastos</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @services.each do |service| %>
          <tr>
            <td><%= service.id%></td>
            <td><%= service.operator.nombre %></td>
            <td><%= service.sum_gastos %></td> 
          </tr>
          <% end %>
          <tr>
          	<td></td>
          	<td></td>
          	<td></td>
          </tr>
          <tr>            
          	<td></td>
            <td>Total:</td>
            <td><%= @services.sum(:suma) %></td>
          </tr>
        </tbody>
      </table>
    </div>
   </div>
</div>