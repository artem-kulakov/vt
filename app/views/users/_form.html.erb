<%= form_for @user, url: users_admin_index_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.super_admin? %>
    <div class="form-group">
      <%= f.label :company %><br>
      <%= f.select :company_id, Company.all.collect { |p| [ p.name, p.id ] }, {:prompt => 'Elige emprese'}, {:required => true, class: "form-control"} %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control", pattern: "[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*" %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <% if current_user.admin? || current_user.super_admin? %>
    <div class="form-group">
      <%= f.label :admin %><br>
      <%= f.check_box :admin, class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :puesto %><br>
    <%= f.text_field :puesto, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
