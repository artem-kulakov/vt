<!DOCTYPE html>
<html>
<head>
  <title>NuevoTutto</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
	<meta name="viewport" content="width=device-width" />
	<!--     Fonts and icons     -->
	<link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>


<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.creative-tim.com" class="simple-text">
                    Tutto Il Mondo - Ventas
                </a>
            </div>

            <ul class="nav">

                <li class="<%= 'active' if current_page?(root_path) %>">
                    <a href="<%= root_path %>">
                        <i class="material-icons">dashboard</i>
                        <p>Pizarr√≥n</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(new_record_path) %>">
                    <a href="<%= new_record_path %>">
                        <i class="material-icons">indeterminate_check_box</i>
                        <p>Bloqueo</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(records_path) %>">
                    <a href="<%= records_path %>">
                        <i class="material-icons">build</i>
                        <p>Operaciones</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(root_path) %>">
                    <a href="<%= root_path %>">
                        <i class="material-icons">monetization_on</i>
                        <p>Cobranza</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(clients_path) %>">
                    <a href="<%= clients_path %>">
                        <i class="material-icons">group</i>
                        <p>Clientes</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(buses_path) %>">
                    <a href="<%= buses_path %>">
                        <i class="material-icons">directions_bus</i>
                        <p>Autobuses</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(operators_path) %>">
                    <a href="<%= operators_path %>">
                        <i class="material-icons">face</i>
                        <p>Operadores</p>
                    </a>
                </li>

                <li class="<%= 'active' if current_page?(root_path) %>">
                    <a href="<%= root_path %>">
                        <i class="material-icons">account_circle</i>
                        <p>Usuarios</p>
                    </a>
                </li>

            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                </div>
                <div class="collapse navbar-collapse">
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
					<%= yield %>
                </div>
            </div>
        </div>
    </div>
</div>



</body>
</html>
