<div id="formario">
  <%= search_form_for @q do |f| %>
  <div class="row">
    <div class="col-md-12">
      <h6>Operador:</h6>
      <%= f.select :operator_id_eq, options_from_collection_for_select(Operator.all, "id", "nombre", @q.operator_id_eq) %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.submit "Buscar", class: "button button_red button_block" %>
    </div>
  </div>
  <hr>

  <% end %>
</div>





