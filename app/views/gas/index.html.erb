<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-headline">
      <div class="panel-heading">
        <h3>Precios de Diesel</h3>
        <hr>
      </div>
      <div class="panel-body">
       <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Cantidad</th>
              <th>Fecha</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @gas.each do |ga| %>
            <tr>
              <td><%= ga.cantidad %></td>
              <td><%= ga.month %></td>
              <td><%= link_to 'Editar', edit_ga_path(ga) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>       
    </div>
  </div>
</div>
</div>
