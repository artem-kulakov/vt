<p id="notice"><%= notice %></p>

<h1>Listing Buses</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Marca</th>
      <th>Capacidad</th>
      <th>Modelo</th>
      <th>Placa</th>
      <th>Version</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.numero %></td>
        <td><%= bus.marca %></td>
        <td><%= bus.capacidad %></td>
        <td><%= bus.modelo %></td>
        <td><%= bus.placa %></td>
        <td><%= bus.version %></td>
        <td><%= bus.user %></td>
        <td><%= link_to 'Show', bus %></td>
        <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
        <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

