<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Busca compañías</h5>
        </div>
        <div class="card-block">
         <%= search_form_for @q do |f| %>
          <div class="row">
          <div class="col-md-12">
            <div class="form-group">
                <label>Compañía:</label>
                <%= f.search_field :name_or_razon_social_or_alias_or_rfc_or_company_type_cont, placeholder: "Buscar compañía", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Buscar", class: "btn btn-primary" %>
          </div>
          </div>    
        <% end %>       
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Nueva Empresa</h5>
        </div>
        <div class="card-block">
            <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Información</th>
                      <th>Cotizaciones</th>
                      <th>Órdenes</th>
                      <th>Servicios</th>
                      <th>Clientes</th>
                      <th>Autobuses</th>
                      <th>Operadores</th>
                      <th>Usuarios</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @companies.each do |company| %>
                      <tr>
                        <td><%= company.id %></td>
                        <td><i class="feather icon-file-text"></i> <%= company.try(:nombre) %> <br> <i class="feather icon-file"></i> <%= company.try(:address) %> (<%= company.try(:rfc) %>) <br> <i class="feather icon-file"></i> <%= company.try(:razon_social) %> </td>
                        <td><%= company.quotations.count %></td>
                        <td><%= company.records.count %></td>
                        <td><%= company.services.count %></td>
                        <td><%= company.clients.count %></td>
                        <td><%= company.buses.count %></td>
                        <td><%= company.operators.count %></td>
                        <td><%= company.users.count %></td>
                        <td><%= link_to 'Ver mas', company %></td>
                        <td><%= link_to 'Editar', edit_company_path(company) %></td>
                        <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>